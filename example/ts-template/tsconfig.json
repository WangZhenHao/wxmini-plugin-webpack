{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": false,
      "declaration": false,
      "moduleResolution": "node",
      "types": ["miniprogram-api-typings", "./src/typings/index.d.ts"],
      "baseUrl": "./",
      "paths": {
        "@src/*": ["./src/*"],
        "@components/*": ["./src/components/*"],
        "@common/*": ["./src/common/*"],
        "@lib/*": ["./src/lib/*"]
      }
    },
    "include": ["./src"],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
  }
